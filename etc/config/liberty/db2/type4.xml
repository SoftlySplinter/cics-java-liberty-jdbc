<?xml version="1.0" encoding="UTF-8"?>
<server description="Db2 type 4 JDBC driver template configuration">
    <!-- Authentication data for Db2. -->
    <!-- Note: Passwords should be encoded using Liberty's securityUtility tool. -->
    <authData id="db2" user="db2user" password="db2password" />

    <!-- DataSource with type 4 JDBC driver -->
    <dataSource id="db2Type4JdbcDataSource" jndiName="jdbc/defaultCICSDataSource"
        type="javax.sql.XADataSource" containerAuthDataRef="db2">
        <jdbcDriver libraryRef="db2Type4JdbcLibrary" />
        <properties.db2.jcc driverType="4"
            databaseName="DSN8B10"
            serverName="db2.example.com"
            portNumber="50000" />
    </dataSource>

    <!-- Library DB2 JDBC Driver -->
    <library id="db2Type4JdbcLibrary">
        <fileset dir="/usr/lpp/db2v13/jdbc/classes" includes="db2jcc4.jar db2jcc_license_cisuz.jar" />
        <fileset dir="/usr/lpp/db2v13/jdbc/lib" includes="libdb2jcct2zos4_64.so" />
    </library>

</server>